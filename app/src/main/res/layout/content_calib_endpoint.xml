<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hobot.sample.app.module.adas.CalibrationImageView
        android:id="@+id/civ_calib"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/rl_ctl"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_left" />

        <ImageButton
            android:id="@+id/btn_up"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_btn_up" />

        <ImageButton
            android:id="@+id/btn_right"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_right" />

        <ImageButton
            android:id="@+id/btn_down"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_btn_down" />
    </RelativeLayout>

</RelativeLayout>
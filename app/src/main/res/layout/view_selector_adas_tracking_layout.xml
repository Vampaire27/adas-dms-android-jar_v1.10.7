<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/frame"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center|start|bottom"
        android:text="@string/adas_tracking_func"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic" />

    <Switch
        android:id="@+id/switch_adas_tracking_vehicles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:minHeight="50dp"
        android:text="@string/slide_action_adas_tracking_vehicles_switch"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic" />

    <Switch
        android:id="@+id/switch_adas_tracking_lanes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:minHeight="50dp"
        android:text="@string/slide_action_adas_tracking_lanes_switch"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic" />

</LinearLayout>
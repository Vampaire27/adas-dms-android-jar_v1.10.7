<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hobot.sample.app.module.wheel.view.WheelPreview
        android:id="@+id/wheel_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.hobot.sample.app.module.wheel.view.CustomRemoteView
        android:id="@+id/remote_view"
        android:layout_width="200dp"
        android:layout_height="200sp"
        android:background="@color/transparent"
        app:backdgroundRadius="70dp"
        app:rockerRadius="20dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"/>

    <com.hobot.sample.app.module.wheel.view.WheelRectView
        android:id="@+id/wheel_rect_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sure_selector"
        android:layout_gravity="center|bottom"
        android:background="@android:color/transparent"
        android:layout_marginBottom="30dp"/>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom"
       android:layout_marginLeft="30dp"
       android:layout_marginBottom="60dp"
       android:orientation="vertical">

       <ImageButton
           android:id="@+id/large_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/scale_1_background"
           android:src="@drawable/bigger_selector"/>

       <ImageButton
           android:id="@+id/reduce_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/scale_2_background"
           android:src="@drawable/small_selector"/>
   </LinearLayout>
</FrameLayout>
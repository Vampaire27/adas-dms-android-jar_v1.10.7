<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#1D233A"
            android:gravity="center_vertical">
        <android.support.v7.widget.AppCompatImageView
                app:srcCompat="@drawable/ic_exhibition_logo"
                android:layout_marginStart="15dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:layout_width="70dp"/>
        <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:layout_width="1dp"/>
        <TextView
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/dms_exhibition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="61.5dp"
            android:layout_below="@+id/title_container"
            android:background="@drawable/ic_exhibition_background"
            android:orientation="vertical"
            android:layout_width="205.5dp"
            android:layout_height="383.5dp"
            android:padding="15dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                <android.support.v7.widget.AppCompatImageView
                        app:srcCompat="@drawable/ic_exhibition_eye"
                        android:scaleType="fitCenter"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="#00D0BB"
                        android:textSize="14dp"
                        android:text="@string/dms_exhibition_eye_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:textColor="@color/white"
                        android:text="@string/dms_exhibition_left"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/left_eye_status"
                        android:layout_marginStart="5dp"
                        android:textColor="#FFC400"
                        android:text="@string/dms_exhibition_eye_status_values"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:text="@string/dms_exhibition_right"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/right_eye_status"
                        android:layout_marginStart="5dp"
                        android:textColor="#FFC400"
                        android:text="@string/dms_exhibition_eye_status_values"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:alpha="0.5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#00D0BB"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                <android.support.v7.widget.AppCompatImageView
                        app:srcCompat="@drawable/ic_exhibition_face"
                        android:scaleType="fitCenter"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="#00D0BB"
                        android:textSize="14dp"
                        android:text="@string/dms_exhibition_face_orientation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/face_orientation"
                        android:text="@string/dms_exhibition_face_orientation_values"
                        android:textColor="#FFC400"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <View
                android:alpha="0.5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#00D0BB"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                <android.support.v7.widget.AppCompatImageView
                        app:srcCompat="@drawable/ic_exhibition_head"
                        android:scaleType="fitCenter"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="#00D0BB"
                        android:textSize="14dp"
                        android:text="@string/dms_exhibition_head_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/head_position"
                        android:singleLine="true"
                        android:text="@string/dms_exhibition_head_position_values"
                        android:textColor="#FFC400"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <View
                android:alpha="0.5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#00D0BB"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                <android.support.v7.widget.AppCompatImageView
                        app:srcCompat="@drawable/ic_exhibition_direct"
                        android:scaleType="fitCenter"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="#00D0BB"
                        android:textSize="14dp"
                        android:text="@string/dms_exhibition_head_rotation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/head_rotation"
                        android:text="@string/dms_exhibition_head_rotation_values"
                        android:singleLine="true"
                        android:textColor="#FFC400"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:alpha="0.5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#00D0BB"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                <android.support.v7.widget.AppCompatImageView
                        app:srcCompat="@drawable/ic_exhibition_driver"
                        android:scaleType="fitCenter"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="#00D0BB"
                        android:textSize="14dp"
                        android:text="@string/dms_exhibition_driver_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <GridLayout
                    android:columnCount="2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/fatigue_status"
                        android:text="@string/dms_exhibition_fatigue"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/calling_status"
                        android:layout_marginStart="33.33dp"
                        android:text="@string/dms_exhibition_calling"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/smoking_status"
                        android:text="@string/dms_exhibition_smoking"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/yawning_status"
                        android:text="@string/dms_exhibition_yawning"
                        android:layout_marginStart="33.33dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/distraction_status"
                        android:text="@string/dms_exhibition_distraction"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/abnormal_status"
                        android:text="@string/dms_exhibition_abnormal"
                        android:layout_marginStart="33.33dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/title_container"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal">
        <TextView
                android:textSize="9dp"
                android:textColor="@color/white"
                android:text="Call Probability Curve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.hobot.sample.app.view.WaveView
                android:id="@+id/call_wave"
                android:layout_width="120dp"
                android:layout_height="100dp"/>
        <TextView
                android:layout_marginTop="25dp"
                android:textSize="9dp"
                android:textColor="@color/white"
                android:text="Smoking Probability Curve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.hobot.sample.app.view.WaveView
                android:id="@+id/smoke_wave"
                android:layout_width="120dp"
                android:layout_height="100dp"/>
    </LinearLayout>

</RelativeLayout>